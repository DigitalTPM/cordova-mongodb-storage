<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-mongodb-storage" version="0.0.1">
    <name>MongoDBStorage</name>
    <description>Cordova MongoDB Plugin</description>
    <keywords>Mongo,MongoDB, MongoDB Mobile</keywords>

    <engines>
        <engine name="cordova" version=">=3.0.0"/>
    </engines>

    <js-module src="www/plugin.js" name="mongodb">
        <clobbers target="window.plugins.mongodb" />
    </js-module>


    <platform name="android">
        <framework src="build-extras.gradle" custom="true" type="gradleReference"/>
        <config-file target="config.xml" parent="/*">
            <feature name="MongoDBStorage">
                <param name="android-package" value="com.mikakrooswijk.mongodb.plugin.
                "/>
            </feature>
        </config-file>

        <source-file src="src/android/com/mikakrooswijk/mongodb/plugin/MongoDBStorage.java" target-dir="src/com/creetion/gps/plugin" />
        <source-file src="src/android/com/mikakrooswijk/mongodb/plugin/DatabaseControl.java" target-dir="src/com/creetion/gps/plugin" />

